{
  "name": "example-project",
  "version": "0.1.0",
  "dependencies": {
    "@frctl/fractal": "^1.3.0",
    "node-sass": "^4.14.1",
    "node-sass-magic-importer": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0"
  },
  "watch": {
    "sass": {
      "patterns": [
        "assets",
        "components"
      ],
      "extensions": "scss"
    }
  },
  "scripts": {
    "sass": "node-sass --importer node_modules/node-sass-magic-importer/dist/cli.js --output-style='expanded' assets/scss/ --output public/css/",
    "fract": "fractal start --sync",
    "watch": "npm-watch",
    "predev": "npm run sass",
    "dev": "run-p fract watch"
  }
}
